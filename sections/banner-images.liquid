{% capture all_banner_img %}
  {% for block in section.blocks %}	
	{% if block.type == 'single_image' %}
      <div class="banner-item full">
        {% if block.settings.link != blank %}
        <a href="{{ block.settings.link }}">
        {% endif %}
          {% if block.settings.img != blank %}
        	  <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings.img | img_url : '1170x' }}" alt="{{ block.settings.img.alt }}">
          {% else %}
        	  {{ 'collection-1' | placeholder_svg_tag }}
          {% endif %}
        {% if block.settings.link != blank %}
        </a>
        {% endif %}
      </div>
	{% else %}
      <div class="banner-item half">
        {% if block.settings.link1 != blank %}
        <a href="{{ block.settings.link1 }}">
        {% endif %}
          {% if block.settings.img1 != blank %}
         	 <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings.img1 | img_url : '570x' }}" alt="{{ block.settings.img1.alt }}">
          {% else %}
         	 {{ 'collection-2' | placeholder_svg_tag }}
          {% endif %}
        {% if block.settings.link1 != blank %}
        </a>
        {% endif %}
      </div>
      <div class="banner-item half">
        {% if block.settings.link2 != blank %}
        <a href="{{ block.settings.link2 }}">
        {% endif %}
          {% if block.settings.img2 != blank %}
          	<img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings.img2 | img_url : '570x' }}" alt="{{ block.settings.img2.alt }}">
          {% else %}
          	{{ 'collection-3' | placeholder_svg_tag }}
          {% endif %}
        {% if block.settings.link2 != blank %}
        </a>
        {% endif %}
      </div>
	{% endif %}
  {% endfor %}
{% endcapture %}
{% if all_banner_img != blank %}
<section class="banner-images" data-section="banner-images">
  <div class="min-container">
    <div class="banner-main-wrapper">
      {{ all_banner_img }}
    </div>
  </div>
</section>
{% endif %}
