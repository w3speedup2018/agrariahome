<section class="about-wrapper" data-section="about_us">
  <div class="min-container">
    <div class="about-inner-wrapper">
      <div class="ab-sidebar">
        <div class="cat_desc">
          {% for block in section.blocks %}          
          {% if block.type == 'Left_bar' %}
          <div class="{% if block.settings.show_hide %} hidden{% endif %}">
            {{ block.settings.heading }}          
            {% if block.settings.img != blank %}
            <img src="{{ block.settings.img | img_url:'master' }}" alt="{{ block.settings.img.alt }}">
            {% endif %}
            {{ block.settings.content }} 
          </div>
          {% endif %}          
          {% endfor %}          
        </div>
      </div>
      <div class="ab-product_box">
        {% for block in section.blocks %}
		{% case block.type %}
        {% when 'image_text' %}
        <div class="ab-pr-image {% if block.settings.show_hide %} hidden{% endif %}">
          {% if block.settings.img != blank %}
          <img src="{{ block.settings.img | img_url:'master' }}" alt="{{ block.settings.img.alt }}" />
          {% endif %}
          {% if block.settings.heading != blank %}
          <p>• {{ block.settings.heading }} •</p>
          {% else %}
          <p>• {{ page.title }} •</p>
          {% endif %}
          {% if block.settings.sub-heading != blank %}
          <h3>{{ block.settings.sub-heading }}</h3>
          {% endif %}
          {{ block.settings.content }}
        </div>        
        {% when 'image_with_richtext' %}
        <div class="ab-column {% if block.settings.show_hide %} hidden{% endif %}">
          {% if block.settings.img != blank %}
          <div class="ab-column-right">
            <img src="{{ block.settings.img | img_url:'master' }}" alt="{{ block.settings.img.alt }}">
          </div>
          {% endif %}
          {% if block.settings.content != blank %}
          <div class="ab-column-left">
            {{ block.settings.content }}            
          </div>
          {% endif %}
        </div>
        {% when 'review_text' %}        
        {% if block.settings.img != blank %}
        <img src="{{ block.settings.img | img_url:'master' }}" alt="{{ block.settings.img.alt }}" class="brand-icons {% if block.settings.show_hide %} hidden{% endif %}">
        {% endif %}
        <div class="ag-movement {% if block.settings.show_hide %} hidden{% endif %}">
          <h2>{{ block.settings.heading }}</h2>
          {% for i in (1..5) %}
          {% capture review_text %}review_text{{ i }}{% endcapture %}
          {% capture details %}details{{ i }}{% endcapture %}
          {% if block.settings[review_text] != blank and block.settings[details] != blank %}
          <h3>
            <span><i>{{ block.settings[review_text] }}</i></span>
            <span>– {{ block.settings[details] }}</span>
          </h3>
          {% endif %}
          {% endfor %}          
        </div>
        {% endcase %}
        {% endfor %}   
        {% if section.settings.btn_link != blank and section.settings.enable_shopbtn and section.settings.btn_text != blank %}
        <div class="ab-btn">
          <a href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
        </div>
        {% endif %}
      </div>

    </div>
  </div>
</section>

