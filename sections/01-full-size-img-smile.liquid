<div class="head-section__wrapper product-wrapp">
  <div class="general--image--wrp">
    {% if section.settings.image != blank %}
    <a href="{{ section.settings.image_url }}">
      <img src="{{ section.settings.image | img_url: "master" }}" class="head-section__img" />
      {% if section.settings.image_mob != blank %}
        <img src="{{ section.settings.image_mob | img_url: "master" }}" class="head-section__img-mob" />
      {% endif %}
    </a>
  {% endif %}
  </div>
  {% if section.settings.shop_now %}
    <a href="{{ section.settings.image_url }}" class="btn-primary btn-middle-abs">Shop Now</a>
  {% endif %}
</div>

<style>
  .head-section__wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  .head-section__wrapper .head-section__img {
  	display: block;
  }
  .head-section__wrapper .head-section__img-mob {
  	display: none;
  }
  @media only screen and (max-width: 768px){
    .head-section__wrapper .head-section__img {
      display: none;
    }
    .head-section__wrapper .head-section__img-mob {
      display: block;
    }
  }
  .btn-middle-abs {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 20px;
    text-transform: uppercase;
  }
</style>

{% schema %}
  {
    "name": "Head Image",
    "settings": [
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image Desktop"
        },
		{
          "type": "image_picker",
          "id": "image_mob",
          "label": "Image Mobile"
        },
        {
          "type": "url",
          "id": "image_url",
          "label": "Image Link"
        },
        {
          "type": "checkbox",
          "id": "shop_now",
          "label": "Shop Now button?",
          "default": false
        },
        {
          "type": "url",
          "id": "shop_now_url",
          "label": "Shop Now Url"
        }
	]
  }
{% endschema %}

