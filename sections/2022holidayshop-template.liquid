{% for block in section.blocks %}	
  {% if block.type == 'single_image' %}
    {% if block.settings.img != blank or block.settings.mob_img != blank %}
      <section class="banner-images {% if block.settings.show_hide %} hidden{% endif %}" data-section="banner-images">
        <div class="min-container">
          <div class="banner-main-wrapper">
            <div class="banner-item full" data-section="banner-images">
              {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}">
                {% endif %}
                {% if block.settings.img != blank %}
                <img class="lazy2 lazy3 {% if block.settings.mob_img != blank %} cm-xl-show {% endif %}" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings.img | img_url : '1170x' }}" alt="{{ block.settings.img.alt }}">
                {% endif %}
                {% if block.settings.mob_img != blank %}
                <img class="lazy2 lazy3 cm-md-show" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings.mob_img | img_url : '767x' }}" alt="{{ block.settings.mob_img.alt }}">
                {% endif %}
                {% if block.settings.img == blank and block.settings.mob_img == blank %}
                {{ 'collection-1' | placeholder_svg_tag }}
                {% endif %}
                {% if block.settings.link != blank %}
              </a>
              {% endif %}
            </div>
          </div>
        </div>
      </section>
    {% endif %}	
  {% elsif block.type == 'double_image' %}
    <section class="banner-images {% if block.settings.show_hide %} hidden{% endif %}" data-section="banner-images">
      <div class="min-container">
        <div class="banner-main-wrapper" >
          <div class="banner-item half">
            {% if block.settings.link1 != blank %}
            <a href="{{ block.settings.link1 }}">
              {% endif %}
              {% if block.settings.img1 != blank %}
              <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings.img1 | img_url : '570x' }}" alt="{{ block.settings.img1.alt }}">
              {% else %}
              {{ 'collection-2' | placeholder_svg_tag }}
              {% endif %}
              {% if block.settings.link1 != blank %}
            </a>
            {% endif %}
          </div>
          <div class="banner-item half">
            {% if block.settings.link2 != blank %}
            <a href="{{ block.settings.link2 }}">
              {% endif %}
              {% if block.settings.img2 != blank %}
              <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings.img2 | img_url : '570x' }}" alt="{{ block.settings.img2.alt }}">
              {% else %}
              {{ 'collection-3' | placeholder_svg_tag }}
              {% endif %}
              {% if block.settings.link2 != blank %}
            </a>
            {% endif %}
          </div>
        </div>
      </div>
    </section>
  {% elsif block.type == 'container_width_banner' %}
    {% if block.settings.img_desc != blank or block.settings.img_mob != blank %}
    <section class="hemp-seed-oils {% if block.settings.show_hide %} hidden{% endif %}" data-section="oils-banner-image">
              {% if block.settings.img_url != blank %}   
        <a href="{{block.settings.url}}" class="oils-banner-img">
          {% endif %}
          {% if block.settings.img_desc != blank %}
          <img style="width: 100%;" class="lazy2 lazy3 {% if block.settings.img_mob != blank %}cm-xl-show {% endif %}" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings.img_desc | img_url:"1920x" }}" alt="oils-banner" />
          {% endif %}
          {% if block.settings.img_mob != blank %}
          <img class="lazy2 lazy3 cm-md-show" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings.img_mob | img_url:"767x" }}" alt="oils-banner"/>
          {% endif %}
          {% if block.settings.img_url != blank %}   
        </a> 
        {% endif %}
      <div class="min-container">

      </div>
    </section>
    {% endif %}
  {% elsif block.type == 'image_with_text' %}
    <section class="product-wrapper {% if block.settings.show_hide %} hidden{% endif %}" data-section="image-with-text">
      <div class="min-container">
        <div class="row">
          {% for i in (1..3) %}
            {% capture title %}title{{i}}{% endcapture %}
            {% capture subtitle %}subtitle{{i}}{% endcapture %}
            {% capture button_text %}button_text{{i}}{% endcapture %}
            {% capture link %}link{{i}}{% endcapture %}
            {% capture img %}img{{i}}{% endcapture %}
              {% if block.settings[title] != blank or block.settings[subtitle] != blank or block.settings[button_text] != blank or block.settings[img] != blank %}
              <div class="product-item">
                <div class="product-item-wrapper">
                  <a href="{{ block.settings[link] }}">
                    <div class="product-image">
                      {% if block.settings[img] != blank %}
                      <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings[img] | img_url : '370x' }}" alt="{{ block.settings[img].alt }}">
                      {% else %}
                      {{ 'product-1' | placeholder_svg_tag }}
                      {% endif %}
                    </div>
                  </a>
                  {% if block.settings[title] != blank or block.settings[subtitle] != blank or block.settings[button_text] != blank %}
                  <div class="product-content">
                    {% if block.settings[title] != blank %}
                    <h5>
                      <a href="{{ block.settings[link] }}">
                        {{ block.settings[title] }}
                      </a>
                    </h5>
                    {% endif %}
                    {% if block.settings[subtitle] != blank %}
                    <p>{{ block.settings[subtitle] }}</p>
                    {% endif %}
                    {% if block.settings[button_text] != blank %}
                    <a href="{{ block.settings[link] }}" class="btn-primary"><span>{{ block.settings[button_text] }}</span></a>
                    {% endif %}
                  </div>
                  {% endif %}
                </div>
              </div>
              {% endif %}  
          {% endfor %}
        </div>
      </div>
    </section>
  {% elsif block.type == 'featured_products' %}
    {% assign collection = collections[block.settings.collection] %}
    {% if collection.products != blank %}
    <section class="top-products-wrapper {% if block.settings.no_line %} no_line{% endif %} {% if block.settings.show_hide %} hidden{% endif %}">
      <div class="min-container">
        {% if block.settings.title != blank %}
        <div class="section-title">
          <h3>{{ block.settings.title }}</h3>
        </div>
        {% else %}
        <div class="section-title">
          <h3>{{ collection.title }}</h3>
        </div>
        {% endif %}
        <div class="product-slider">
          {% for product in collection.products limit:block.settings.limit %}
          {% include 'product-gird-item' %}
          {% endfor %}
          {% assign collection_new = collections[block.settings.collection_new] %}
          {% if collection_new.products != blank %}
          {% for product in collection_new.products limit:block.settings.limit %}
          {% include 'product-gird-item' %}
          {% endfor %}
          {% endif %}
        </div>
      </div>
    </section>
    {% endif %}
  {% endif %}
{% endfor %}
