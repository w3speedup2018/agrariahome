<section class="user-section">
  <div class="container">
    <div class="user-cover other_login">  
      <div class="user-inner-box bgcolor4">

        {% comment %}
        This form must use 'reset_customer_password'
        {% endcomment %}
        {% form 'reset_customer_password' %}

        <div class="section-header">
          <h1 class="section-header__title">{{ 'customer.reset_password.title' | t }}</h1>
        </div>
        <div class="main_wrapper">
          <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

          {{ form.errors | default_errors }}

          <div class="form-wrap">

            <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
            <input type="password" placeholder="{{ 'customer.reset_password.password' | t }}" value="" name="customer[password]" id="ResetPassword" {% if form.errors contains "password" %} class="error"{% endif %}>
          </div>
          <div class="form-wrap">

            <label for="PasswordConfirmation" >{{ 'customer.reset_password.password_confirm' | t }}</label>
            <input type="password" value="" placeholder="{{ 'customer.reset_password.password_confirm' | t }}" name="customer[password_confirmation]" id="PasswordConfirmation" {% if form.errors contains "password_confirmation" %} class="error"{% endif %}>
          </div>
          <p>
            <input type="submit" class="btn" value="{{ 'customer.reset_password.submit' | t }}">
          </p>
        </div>
        {% endform %}

      </div>
    </div>
  </div>
</section>