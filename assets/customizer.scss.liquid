@media screen and (max-width: 769px){
  #backtotop {
  	display: none;
  }
  .fixed-tab {
  	display: none;
  }
  .customizer-options .customizer-option.customizer-options_diffusers.show {
  	display: block
  }
}

.customizer-page {
