}

.customizer_image {
  position: relative;
  @media screen and (max-width: 769px){
    min-height: 470px;
  }
  #customizer_image {
    position: -webkit-sticky; /* Safari */
    position: sticky;
    top: 70px;
    #customizer_price {
      font-size: 18px;
      .af_money {
      	font-weight: 600;
        margin-left: 5px;
      }
    }
  }
}

.section-header {
  .section-header__heading {
