<div class="cm-pagination">
  <ul>
    {% unless paginate.previous.is_link %}
    <li class="text-li">
      <span>{{ 'general.pagination.previous' | t }}</span>
    </li>
    {% else %}
    <li class="text-li">
      <a href="{{ paginate.previous.url }}">{{ 'general.pagination.previous' | t }}</a>
    </li>
    {% endunless %}
    
    {%- for part in paginate.parts -%}
    {%- if part.is_link -%}
    <li>
      <a href="{{ part.url }}">{{ part.title }}</a>
    </li> 
    {%- else -%}
    {%- if part.title == paginate.current_page -%}
    <li class="active-item">
      <a href="#">{{ part.title }}</a>
    </li>  
    {%- else -%}
    <li class="text-li">
      <span>{{ part.title }}</span>
    </li>
    {%- endif -%}
    {%- endif -%}
    {%- endfor -%}
    
    {% unless paginate.next.is_link %}
    <li class="text-li">
      <span>{{ 'general.pagination.next' | t }}</span>
    </li>
    {% else %}
   <li class="text-li">
      <a href="{{ paginate.next.url }}">{{ 'general.pagination.next' | t }}</a>
    </li>
    {% endunless %}     
  </ul>
</div>